{
  "name": "ts_express",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "npx prettier --write src/**/** tests/**/** && npx tslint --fix -p .",
    "test": "npm run lint && npx jest --coverage",
    "test-clear": "npx jest --clearCache",
    "test-watch": "npx jest --coverage --watch"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/*.spec.+(ts|tsx|js)"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.11",
    "@types/node": "^10.12.18",
    "@types/supertest": "^2.0.7",
    "express": "^4.16.4",
    "jest": "^23.6.0",
    "supertest": "^3.3.0",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "prettier": "^1.15.3",
    "prettier-tslint": "^0.4.1",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-microsoft-contrib": "^6.0.0",
    "tslint-plugin-prettier": "^2.0.1"
  }
}
